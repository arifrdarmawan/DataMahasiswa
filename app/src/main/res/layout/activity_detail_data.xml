<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <ImageView
            android:id="@+id/foto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/student1"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginLeft="20dp">

            <TextView
                android:id="@+id/not"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:text="Nomor" />

            <EditText
                android:id="@+id/no"
                android:layout_width="360dp"
                android:layout_height="50dp"
                android:layout_marginLeft="5dp"
                android:drawableLeft="@drawable/ic_create_black_24dp" />

            <TextView
                android:id="@+id/namat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:text="Nama" />

            <EditText
                android:id="@+id/nama"
                android:layout_width="360dp"
                android:layout_height="50dp"
                android:layout_below="@+id/namat"
                android:drawableLeft="@drawable/ic_group_black_24dp"
                android:layout_marginLeft="5dp"/>

            <TextView
                android:id="@+id/ttl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:text="Tanggal Lahir" />

            <EditText
                android:id="@+id/ttlt"
                android:layout_width="360dp"
                android:layout_height="50dp"
                android:layout_below="@+id/ttl"
                android:drawableLeft="@drawable/ic_date_range_black_24dp"
                android:layout_marginLeft="5dp"/>

            <TextView
                android:id="@+id/jkt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ttlt"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:text="Jenis Kelamin" />

            <EditText
                android:id="@+id/jktt"
                android:layout_width="360dp"
                android:layout_height="50dp"
                android:layout_below="@+id/jkt"
                android:drawableLeft="@drawable/ic_person_black_24dp"
                android:layout_marginLeft="5dp"/>

            <TextView
                android:id="@+id/Alamat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/jktt"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:text="Alamat" />

            <EditText
                android:id="@+id/Alamatt"
                android:layout_width="360dp"
                android:layout_height="50dp"
                android:layout_below="@+id/Alamat"
                android:drawableLeft="@drawable/ic_place_black_24dp"
                android:layout_marginRight="5dp"/>
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>